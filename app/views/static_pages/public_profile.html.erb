<div class="mx-auto max-w-3xl space-y-10">

  <!-- Profile header -->
  <header class="pt-6 space-y-6 text-center">
    <div class="flex flex-col items-center gap-4">

      <!-- Avatar / initial -->
      <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-red-500 to-rose-500 shadow-lg shadow-red-500/30">
        <span class="text-2xl font-semibold text-white">
          <%= @user.username.first&.upcase || "U" %>
        </span>
      </div>

      <div class="space-y-1">
        <h1 class="text-2xl font-semibold tracking-tight text-slate-50">
          @<%= @user.username %>
        </h1>

        <p class="text-xs text-slate-400">
          Public anonymous messages shared by <span class="text-slate-200 font-medium"><%= @user.username %></span>.
        </p>
      </div>

      <div class="flex items-center gap-4 text-xs text-slate-400">
        <span>
          <span class="text-slate-100 font-semibold"><%= @messages.size %></span>
          public <%= "message".pluralize(@messages.size) %>
        </span>
      </div>

      <!-- Send message -->
      <div>
        <% secret_link = new_user_message_url(@user.username) %>
        <a href="<%= secret_link %>"
           data-controller="magnetic"
           data-magnetic-target="inner"
           data-action="mousemove->magnetic#mousemove mouseleave->magnetic#mouseleave"
           class="relative inline-flex">
           <span class="inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-red-500 to-rose-500 px-4 py-2 text-xs font-semibold text-white shadow-lg shadow-red-500/30 transition-transform duration-150 ease-out will-change-transform">
          Send an anonymous message
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none"
               stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14" />
            <path d="m12 5 7 7-7 7" />
          </svg>
             </span>
        </a>
      </div>

    </div>
  </header>

  <!-- Public messages -->
  <section class="space-y-4">

    <div class="flex items-center justify-between">
      <h2 class="text-sm font-semibold text-slate-100">Public messages</h2>
      <p class="text-[11px] text-slate-500">
        Only messages chosen by <%= @user.username %> appear here.
      </p>
    </div>

    <% if @messages.any? %>
      <div class="space-y-4">

        <% @messages.each do |message| %>
          <article class="rounded-2xl border border-slate-800 bg-slate-900/70 p-4 shadow-md shadow-black/20">

            <header class="mb-2 flex items-center justify-between text-[11px] text-slate-500">
              <span>Anonymous</span>

              <div class="flex items-center gap-2">
                <% if message.pinned? %>
                  <span class="rounded-full bg-rose-500/10 px-2 py-0.5 text-[10px] text-rose-300">
                    Pinned
                  </span>
                <% end %>

                <span class="rounded-full bg-red-500/10 px-2 py-0.5 text-[10px] text-red-300">
                  Public
                </span>
              </div>
            </header>

            <p class="text-sm text-slate-100 leading-relaxed">
              <%= simple_format(message.body) %>
            </p>

            <footer class="mt-3 text-[11px] text-slate-500 flex items-center justify-between">
              <span>Shared publicly</span>
              <span><%= l(message.created_at, format: :short) rescue message.created_at.to_s(:short) %></span>
            </footer>

          </article>
        <% end %>

      </div>

      <!-- Pagination -->
      <div class="pt-6 flex justify-center">
        <%= paginate @messages if respond_to?(:paginate) %>
      </div>

    <% else %>

      <div class="rounded-2xl border border-dashed border-slate-700 bg-slate-900/40 p-10 text-center">
        <p class="text-sm text-slate-300">
          <%= @user.username %> hasnâ€™t shared any public messages yet.
        </p>
        <p class="mt-2 text-xs text-slate-500">
          Once they make messages public, theyâ€™ll appear here.
        </p>
      </div>

    <% end %>

  </section>

</div>

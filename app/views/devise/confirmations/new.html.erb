<h2 class="text-3xl font-semibold mb-8 bg-gradient-to-r from-rose-400 to-red-400 bg-clip-text text-transparent">
  Resend confirmation instructions
</h2>

<%= form_for(
      resource,
      as: resource_name,
      url: confirmation_path(resource_name),
      html: { method: :post, class: "space-y-6 max-w-md" }
    ) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email -->
  <div class="flex flex-col space-y-1">
    <%= f.label :email, class: "text-sm font-medium text-slate-300" %>

    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                      class: "rounded-xl bg-slate-800/50 border border-slate-700 px-4 py-3 text-slate-100
                 placeholder:text-slate-500 focus:border-rose-400 focus:ring-2
                 focus:ring-rose-400/30 outline-none transition" %>
  </div>

  <!-- Submit -->
  <div class="pt-2">
    <%= f.submit "Resend confirmation instructions",
                 class: "w-full sm:w-auto rounded-xl bg-gradient-to-r from-red-500 to-rose-500 py-3 px-6
             font-semibold text-white shadow-lg shadow-red-500/30 transition hover:brightness-110
             cursor-pointer" %>
  </div>

<% end %>

<div class="mt-6">
  <%= render "devise/shared/links" %>
</div>
